                "CUDA_HOME": "/opt/nvidia/hpc_sdk/Linux_x86_64/21.9/cuda/11.4"
            }
        },
        {
            "name": "gpu",
            "hidden": true,
            "inherits": "nvhpc",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-fast -Minfo -stdpar=gpu"
            }
        },
        {
            "name": "multicore",
